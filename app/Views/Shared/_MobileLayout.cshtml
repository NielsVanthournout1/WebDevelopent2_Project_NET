<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - SIDinBeurs Mobiel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/mobile.css" asp-append-version="true" />
</head>
<body class="mobile-body">
    <header class="mobile-header">
        <div class="container">
            <div class="text-center pt-3 pb-3">
                <img src="~/images/logo.png" alt="SIDinBeurs Logo" class="mobile-logo" />
            </div>
        </div>
    </header>

    <div class="container mobile-container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="mobile-footer">
        <div class="container text-center py-3">
            <small>&copy; @DateTime.Now.Year - SIDinBeurs</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/mobile.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>